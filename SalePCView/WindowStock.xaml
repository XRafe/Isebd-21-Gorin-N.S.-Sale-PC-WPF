            <DataGrid x:Name="dataGridViewStock" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="348" Margin="0,0,-2,-2" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
        </GroupBox>
        <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="195,298,0,0" VerticalAlignment="Top" Width="74" Click="buttonSave_Click" Height="20"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="294,298,0,0" VerticalAlignment="Top" Width="74" Click="buttonCancel_Click" Height="20"/>
    </Grid>
</Window>
