<Window x:Class="SalePCView.WindowHardwares"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalePCView"
        mc:Ignorable="d"
        Title="Комплектующие" Height="373.5" Width="485">
    <Grid>
        <DataGrid x:Name="dataGridViewHardwares" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="350" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" IsReadOnly="True" Margin="10,10,0,-14.208"/>
        <Button x:Name="buttonAdd" Content="Добавить" HorizontalAlignment="Left" Margin="374,28,0,0" VerticalAlignment="Top" Width="76" Click="buttonAdd_Click"/>
        <Button x:Name="buttonUpd" Content="Изменить" HorizontalAlignment="Left" Margin="374,67,0,0" VerticalAlignment="Top" Width="76" Click="buttonUpd_Click"/>
        <Button x:Name="buttonDel" Content="Удалить" HorizontalAlignment="Left" Margin="374,115,0,0" VerticalAlignment="Top" Width="76" Click="buttonDel_Click"/>
        <Button x:Name="buttonRef" Content="Обновить" HorizontalAlignment="Left" Margin="374,162,0,0" VerticalAlignment="Top" Width="76" Click="buttonRef_Click"/>
    </Grid>
</Window>
